<h2 class="center">Welcome to God land stats</h2>

<script>
	$(function () {
    $('#container').highcharts({
        chart: {
            //type: 'column'
        },
        title: {
            text: 'Temperature By Date'
        },
        xAxis: {

            categories: [
               <% @time.each do |time| %>
               '<%= time %>',
               <% end %>
             ]
        },
        yAxis: {
            min: 0,
            title: {
                text: 'Temperature'
            }
        },
        tooltip: {
            headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
            pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
                '<td style="padding:0"><b>{point.y:.1f} mm</b></td></tr>',
            footerFormat: '</table>',
            shared: true,
            useHTML: true
        },
        plotOptions: {
            column: {
                pointPadding: 0.2,
                borderWidth: 0
            }
        },
        series: [{
            name: 'Room1',
            type: 'line',
            data: [<%= @room1_temperature.map(&:inspect).join(', ') %>]

        }, {
            name: 'Room2',
            type: 'line',
            data: [<%= @room2_temperature.map(&:inspect).join(', ') %>]

        }]
    });
});   
</script>

<div class="main-content">
<div id="container" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
	<div class="content left">

		<table>
			<thead>
				<tr>
					<th colspan="3">
						Stats for <%= @areas[0].name %>
					</th>
				</tr>
				<tr>
					<th>Temperature</th>
					<th>Unit</th>
					<th>Time</th>
				</tr>
			</thead>
			<tbody>
				<% @areas[0].stats.each do |stat| %>
				<tr>
					<td><%= stat.value %></td>
					<td><%= stat.unit %></td>
					<td>
						<% stat.time[8] = ' ' %>
						<%= ("20" + stat.time + " UTC").in_time_zone('Sofia') %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="content right">
		<table>
			<thead>
				<tr>
					<th colspan="3">
						Stats for <%= @areas[1].name %>
					</th>
				</tr>
				<tr>
					<th>Temperature</th>
					<th>Unit</th>
					<th>Time</th>
				</tr>
			</thead>
			<tbody>
				<% @areas[1].stats.each do |stat| %>
				<tr>
					<td><%= stat.value %></td>
					<td><%= stat.unit %></td>
					<td><% stat.time[8] = ' ' %>
						<%= ("20" + stat.time + " UTC").in_time_zone('Sofia') %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>